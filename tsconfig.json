{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./build/src",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types/"
        ],
    },
    "include": [
        "./src/*",
        "./src/types",
        "./src/view"
    ],
    "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
    ]
}